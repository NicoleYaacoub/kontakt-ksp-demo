on init
    make_perfview
    set_ui_height_px(70)

    declare ui_knob $volume(0,100,1)
    set_text($volume,"Volume")
    $volume := 80
end on

on ui_control($volume)
    { Volume em centi-dB: -6000 = -60 dB, 0 = 0 dB }
    set_engine_par($ENGINE_PAR_VOLUME, (-6000 + ($volume * 60)), -1, -1, -1)
end on
